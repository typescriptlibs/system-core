{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "rootDir": "sources",
        "target": "es2015"
    },
    "exclude": [
        "client",
        "lib",
        "node_modules"
    ],
    "include": [
        "sources/**/*.ts"
    ]
}
